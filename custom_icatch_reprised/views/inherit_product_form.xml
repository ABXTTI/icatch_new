<?xml version="1.0"?>
<odoo>
    <record id="inherit_product_form" model="ir.ui.view">
        <field name="name">inherit.product.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="is_roll"/>
                <field name="is_mm"/>
                <field name="require_service_purchase_product" attrs="{'invisible': [('type', 'not in', 'product')]}"/>
                <field name="x_is_units"/>
                <field name="x_is_ooh"/>
            </xpath>
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="size_sqrft" attrs="{'required': [('is_roll', '=', 1)]}"/>
            </xpath>
        </field>
    </record>


    <record id="inherit_product_form_extended_only_view" model="ir.ui.view">
        <field name="name">inherit.product.form.extended.only.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="check_service_purchase_product" string="Check Service Purchase Product" type="object"/>
            </xpath>
            <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>